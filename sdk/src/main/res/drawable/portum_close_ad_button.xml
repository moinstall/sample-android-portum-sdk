<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="ring"
            android:innerRadius="15dp"
            android:thickness="2dp"
            android:useLevel="false">
            <size android:height="36dp" android:width="36dp" />
            <solid android:color="#FFFFFFFF"/>
        </shape>
    </item>

    <item android:left="6dp" android:right="12dp" android:bottom="-10dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line"
                android:top="1dip">
                <size android:height="6dp" android:width="1dp" />
                <stroke
                    android:width="2dip"
                    android:color="#FFFFFFFF" />
            </shape>
        </rotate>
    </item>

    <item android:left="6dp" android:right="12dp" android:bottom="10dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line"
                android:top="1dip">
                <size android:height="6dp" android:width="1dp" />
                <stroke
                    android:width="2dip"
                    android:color="#FFFFFFFF" />
            </shape>
        </rotate>
    </item>
</layer-list>